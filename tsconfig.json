{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ES2022",
    "skipLibCheck": true,
    
    /* Code Emission */
    "declaration": true,        // Genera archivos de declaración .d.ts para cada archivo TypeScript.
    "declarationDir": "./dist", // Especifica el directorio donde se guardarán las declaraciones.
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",                     // Output in the `dist` folder
    "rootDir": "./src",                     // Source code in the `src` folder
    "typeRoots": ["./node_modules/@types", "./src/types"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "vite/client"]
}
